<!-- views/assignmen/info.ejs assignment page -->  
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
	<div class="container">

		<div class="page-header text-center">
			<h1><span class="fa fa-anchor"></span> Assignment Dashboard</h1>
			<a href="/logout" class="btn btn-default btn-sm">Logout</a>
		</div>

		<div class="row">
			<!-- LOCAL INFORMATION -->
			<div class="col-sm-6">
				<div class="well">
					<h3><span class="fa fa-user"></span> Local</h3>
						<p>
							<strong>id</strong>: <%= user.id %><br>
							<strong>username</strong>: <%= user.username %><br>
							<strong>password</strong>: <%= user.password %>
						</p>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<%
			var v = "http://localhost:3000";
			var path = submission_data.a_path.split( '/' );
			pos = path.indexOf("public");
			newPath="";
			console.log(path+" "+pos);
			for(var i=pos+1;i<path.length;i++){
			    newPath = newPath +"/"+ path[i]
			}
		%>

		<% //submission info list here %>
		<div class="row">
			<div class="col-md-4">  
				<h4 ><strong>id</strong>             <%= submission_data.id %>             </h4>		
				<h4 ><strong>Aid</strong>               <%= submission_data.Aid %>               </h4>		
				<h4 ><strong>Cid</strong>    <%= submission_data.Cid %>    </h4>		
				<h4 ><strong>Name</strong> <%= submission_data.a_name %> </h4>		
				<h4 ><strong>Path</strong>   
					<a href="<%=newPath%>">  <%=newPath%> </a>
				</h4>		
			</div>
		</div>

		<%//TA info %>
		<div class="row">
			<% asisstant_data.forEach(function(data){ %>
				<div class="col-md-9">  
					<h4 ><strong>Name</strong>      <%= data.name %>     </h4>		
					<h4 ><strong>Username</strong>  <%= data.username %> </h4>		
					<h4 ><strong>Type</strong>      <%= data.type %>     </h4>		
					<h5 ><strong>Semeseter</strong> <%= data.semeseter %></h5>		
					<p ><strong> Year</strong>      <%= data.year %>     </p>		
					<p ><strong> Stream</strong>    <%= data.stream %>   </p>		
				</div>
			<% }) %>
		</div>

		


	</div>
</body>
</html>