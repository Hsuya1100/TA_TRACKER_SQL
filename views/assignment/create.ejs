<!doctype html>
<html>
<head>
	<title> Assignments</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body { padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
	<div class="container mx-auto  " style="text-align: center; margin-top: 12%;background: #d5dde0;padding-left: 0px;padding-right: 0px;margin-left: 1px;margin-right: 0px">
		<h1>Add New Assignment</h1>
		<br>
		<%console.log("new as course:"+ course)%>
		<div style="width:30% ;margin:auto;">
			<form  action="/courses/<%=course.id%>/assignment/new" method="POST">
				<div class="form-group">
					<input class="form-control" placeholder="name" name="Assignment" type="text">
				</div>
				<div class="form-group">
					<input class="form-control" placeholder="course" name="course" type="text" value="<%=course.name%>" fixed>
				</div>
				<div class="form-group">
					<input class="form-control" placeholder="difficulty" name="difficulty" type="text">
				</div>
				<div class="form-group">
					<input class="form-control" placeholder="deadlineRubriks" name="deadlineRubriks" type="text">
				</div>
				<div class="form-group">
					<input class="form-control" placeholder="deadlineEvaluation" name="deadlineEvaluation" type="text">
				</div>
				<div class="form-group">
					<label for="assignedTA">Assigned TA</label>
					<select name="assignedTA" class="form-control" id="assignedTA">
						<option>TA1</option>
						<option>TA2</option>
						<option>TA3</option>
					</select>
				</div>
				<div class="form-group">
					<label for="HeadTA">Head TA</label>
					<select name="headTA" class="form-control" id="headTA">
						<option>TA1</option>
						<option>TA2</option>
						<option>TA3</option>
					</select>
				</div>
				<div class="form-group">
					<input class="form-control" placeholder="import URL" name="importURL" type="text">
				</div>
				<button class="btn btn-md btn-primary btn-block">Create</button>
			</form>
		</div>
		<br>
		<a href="/courses/<%=course.id%>"><button class="btn " style="background: #b4b8ab">back</button></a>
	</div>

</body>
</html>
